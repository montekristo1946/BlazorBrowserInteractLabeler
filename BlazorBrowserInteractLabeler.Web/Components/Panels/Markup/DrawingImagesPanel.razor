@using BlazorBrowserInteractLabeler.Web.Common
<div class="m-0 p-0" 
     id="@ConstantsArm.DrawingImagesPanelRoot" 
     style="width: 100%; height: 100%;  overflow: hidden; background-color: #f0f4fa"
     @onmousewheel="@(MouseWheelHandler)"
     @onmousemove="@(MouseMoveHandler)"
     @onmousedown="@HandlerOnmouseDown" 
     @onmouseup="@HandlerOnmouseUp"
>
         
    <div class="p-0 m-0" style="width:@WidthConvas; height: @HeightConvas; ;
        @CssScale();
        background-position: center ;
        transform-origin: center;">
        <canvas id="@ConstantsArm.IdConvas" width="@WidthConvas" height="@HeightConvas"
                style="position: absolute; background-position: center ;">
        </canvas>
            
        <div style="width: 100%;  height: 100%; position: absolute;">
            <svg width="100%" height="100%">
                @GetRenderAnnotation()
                @CrosshairTemplate
            </svg>
            
        </div>
    </div>
    


</div>

